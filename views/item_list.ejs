<!DOCTYPE html>
<html lang="en">
<%- include('templates/head') %>
<body>
   <%- include('templates/navbar') %>
   <main>
      <div class="header-container">
         <h1>All Items</h1>
         <a href="/inventory/items/create"><img class="add-icon" src="/images/add-icon.svg" alt="add icon button"></a>
      </div>
      <div class="item-list-container">
         <% item_list.forEach(item => { %>
            <div class="item-container">
               <% if(item.profile_img) { %>
                  <img id="item-image" src="<%= item.profile_img %>" alt="Item Image">
               <% } else { %>
                  <img id="item-image" src="/images/bongo-cat.jpeg" alt="Item Image">
               <%  } %>
               <div class="info-container">
                  <h2 class="item-name"><a href=<%= item.url %>><%- item.name %></a></h2>
                  <p class="item-category"><a href=<%= item.category.url %>><%- item.category.name %></a></p>
                  <p class="item-price">$<%= item.price %></p>
                  <% if (item.number_in_stock <= 20) { %>
                     <p class="num-in-stock-alert">Only <%= item.number_in_stock%> left in stock</p>
                  <% } %>
               </div>
            </div>
         <% }); %>
      </div>
   </main>
</body>
</html>